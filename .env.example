# Example environment variables for Televoica Robot
# Copy this file to .env and fill in your values

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_ALLOWED_USERS=  # Comma-separated user IDs, e.g., 123456789,987654321
TELEGRAM_MAX_FILE_SIZE_MB=20

# Application Mode
STT_TELEGRAM_BOT=true  # Set to true to run in bot mode, false for standalone

# Televoica Provider
STT_PROVIDER=whisper  # Options: whisper, google_cloud

# Whisper Configuration
STT_WHISPER_MODEL=base  # Options: tiny, base, small, medium, large
STT_WHISPER_DEVICE=cpu  # Options: cpu, cuda
STT_WHISPER_LANGUAGE=  # Optional: en, ar, es, fr, etc. (leave empty for auto-detect)

# Google Cloud Televoica Configuration
# STT_GOOGLE_CREDENTIALS_PATH=/path/to/credentials.json
# STT_GOOGLE_LANGUAGE_CODE=en-US

# Logging
STT_LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR

# Storage
STT_TEMP_DIR=/tmp/televoica

